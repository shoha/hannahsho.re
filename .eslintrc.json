{
  "env": {
    "browser": true,
    "es2020": true,
    "jest/globals": true,
    "node": true
  },
  "extends": [
    "plugin:react/recommended",
    "plugin:jest/recommended",
    "plugin:jest/style",
    "standard",
    "prettier",
    "prettier/react"
  ],
  "globals": {
    "React": "writable"
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "plugins": ["react", "@typescript-eslint", "jest"],
  "rules": {
    "react/react-in-jsx-scope": "off"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
